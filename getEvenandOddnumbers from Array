fun eOrOgroupBy(number) =
  (number groupBy (isEven($)) mapObject (
    ($$ replace "true" with "even" replace "false" with "odd"): $
  )) orderBy $$

fun eorOmap(number) =
  {
    "even": (payload map if (isEven($))
      $
    else
      null) - null,
    "odd": (payload map if (isOdd($))
      $
    else
      "") - ""
  }
